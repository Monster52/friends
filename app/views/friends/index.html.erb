<h1>Friends</h1>

<table>
  <thread>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thread>

  <tbody>
    <% @friends.each do |friend| %>
    <tr>
      <th><%= friend.first_name %></th>
      <th><%= friend.last_name %></th>
      <th><%= friend.email %></th>
      <th><%= friend.phone %></th>
      <th><%= friend.twitter %></th>
      <th><%= link_to "Show", friend_path(friend) %></th>
      <th><%= link_to "Edit", edit_friend_path(friend) %></th>
      <th><%= link_to "Delete", friend_path(friend), data: {
              turbo_method: :delete,
              turbo_confirm: "Are you sure?"
          } %></th>
    </tr>
    <% end %>
  </tbody>
</table>